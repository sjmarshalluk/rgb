
<div class="wrapper">
	
	<p><%= image_tag @brewery.image.url(:thumb) %></p>
	<h1><%= @brewery.name %></h1>

	
	<%= image_tag "http://maps.google.com/maps/api/staticmap?size=800x300&sensor=false&zoom=16&markers=#{@brewery.latitude}%2C#{@brewery.longitude}" %>
	<%= link_to "View on Google Maps", "http://maps.google.com/maps?q=#{@brewery.latitude},#{@brewery.longitude}"  %>



	<h3>Nearby breweries</h3>
	<ul>
	<% for brewery in @brewery.nearbys(10) %>
	  <li><%= link_to brewery.name, brewery %> (<%= brewery.distance.round(2) %> miles)</li>
	<% end %>
	</ul>


</div>